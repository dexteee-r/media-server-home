# ============================================================================
# Media Server Home - Environment Configuration
# ============================================================================

COMPOSE_PROJECT_NAME=media-server
DOMAIN=home.local
TZ=Europe/Brussels

# Traefik
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=changeme

# Jellyfin
JELLYFIN_PUBLISHED_SERVER_URL=https://jellyfin.${DOMAIN}

# Immich
IMMICH_VERSION=release
IMMICH_DB_PASSWORD=changeme_secure_password
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_USER=immich
POSTGRES_DB=immich

# Storage paths (Windows: C:\media, Linux: /mnt/media)
MEDIA_PATH=/mnt/media
PHOTOS_PATH=/mnt/photos
APPDATA_PATH=/mnt/appdata
BACKUP_PATH=/mnt/backups

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# Backups
RESTIC_REPOSITORY=/mnt/backups/restic
RESTIC_PASSWORD=changeme_strong_password